    %meta{:content => "summary", :name => "twitter:card"}/
    %meta{:content => "@Twitter", :name => "twitter:site"}/
    %meta{:content => "投票 | すいはんき工房", :name => "twitter:title"}/
    %meta{:content => "https://ricevotes.herokuapp.com", :name => "twitter:url"}/
    %meta{:content => "すいはんき工房の企画にあなたが投票ができるサービス", :name => "twitter:description"}/
    %meta{:content => "#{ image_url "shared_image.png"}", :name => "twitter:image"}/
