%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "RiceVotes", :property => "og:title"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "https://ricevotes.herokuapp.com", :property => "og:url"}/
    %meta{:content => "#{ image_url "shared_image.png"}", :property => "og:image"}/
    %meta{:content => "RiceVotes", :property => "og:site_name"}/
    %meta{:content => "すいはんき工房の企画にあなたが投票ができるサービス", :property => "og:description"}/
